{
    "compilerOptions": {
      "target": "ES2022",
      "module": "ESNext",
      "moduleResolution": "typescript",
      "esModuleInterop": true,
      "skipLibCheck": true,
      "strict": true,
      "forceConsistentCasingInFileNames": true,
      "resolveJsonModule": true,
      "isolatedModules": true,
      "moduleDetection": "force",
      "allowJs": false,
      "outDir": "dist"
    },
    "include": ["./**/*.ts"],
    "exclude": ["node_modules", "dist"]
  }
  